{
  "lexicon": 1,
  "id": "fyi.bloc.group.post",
  "defs": {
    "main": {
      "type": "record",
      "description": "A record representing a post within a group",
      "key": "tid",
      "record": {
        "type": "object",
        "required": ["content", "createdAt"],
        "properties": {
          "content": {
            "type":"string",
            "maxLength": 5000,
            "maxGraphemes": 500,
            "description": "Text content for a post"
          },
          "createdAt": {
            "type": "string",
            "format": "datetime",
"description": "Client-declared timestamp when this post was originally created."
          }
        }
      }
    }
  }
}
