
{
  "lexicon": 1,
  "id": "fyi.bloc.group.comment",
  "defs": {
    "main": {
      "type": "record",
      "description": "A record representing a comment or reply within a post",
      "key": "tid",
      "record": {
        "type": "object",
        "required": ["content", "createdAt"],
        "properties": {
          "content": {
            "type":"string",
            "maxLength": 5000,
            "maxGraphemes": 500,
            "description": "Text content for a comment"
          },
          "createdAt": {
            "type": "string",
            "format": "datetime",
"description": "Client-declared timestamp when this post was originally created."
          },
          "reply": {
            "type": "ref",
            "ref": "#replyRef"
          }
        }
      },
      "replyRef": {
        "type": "object",
        "required": ["root", "parent"],
        "properties": {
          "root": {"type": "ref", "ref": "com.atproto.repo.strongRef"},
          "parent": {"type": "ref", "ref": "com.atproto.repo.strongRef"}
        }
      }
    }
  }
}
